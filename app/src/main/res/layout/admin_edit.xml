<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/biru"
    tools:context=".admin.AdminTambahActivity">
    <ScrollView
        android:id="@+id/tambah_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/baseline_arrow_back_ios_24"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Data"
                android:textColor="@color/black"
                android:fontFamily="@font/suez_one"
                android:textSize="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn_back"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suez_one"
                android:text="Judul"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_judul"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tambah_form"
                app:layout_constraintTop_toBottomOf="@id/judul"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/eps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suez_one"
                android:text="Jumlah Episode"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_judul"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_eps"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tambah_form"
                app:layout_constraintTop_toBottomOf="@id/eps"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suez_one"
                android:text="Tanggal Rilis"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_eps"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_tanggal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tambah_form"
                app:layout_constraintTop_toBottomOf="@id/tanggal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suez_one"
                android:text="Genre"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_tanggal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_genre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tambah_form"
                app:layout_constraintTop_toBottomOf="@id/genre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suez_one"
                android:text="Image"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_genre"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tambah_form"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/sinopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suez_one"
                android:text="Sinposis"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_image"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_sinopsis"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/tambah_form"
                app:layout_constraintTop_toBottomOf="@id/sinopsis"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"/>
            <Button
                android:id="@+id/simpan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tambah_form"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_sinopsis"
                app:backgroundTint="@null"
                android:text="SIMPAN"
                android:fontFamily="@font/suez_one"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>